<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
    <!-- Suppress MagicNumber, JavadocVariable, and FinalLocalVariable for all test classes -->
    <suppress checks="MagicNumber" files="src/test/java/.*" />
    <suppress checks="JavadocVariable" files="src/test/java/.*" />
    <suppress checks="FinalLocalVariable" files="src/test/java/.*" />
</suppressions>
